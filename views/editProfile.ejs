<%- include('partials/header') %>
<div class="container-xl px-4 mt-4">

    <!-- <div class="col-xl-4"> -->

      <div class="profile-card card-header mb-4 mb-xl-0">
        <div class="profile-card-header"><h2>Edit Profile</h2></div>
        <div class="profile-card-body text-center">

          <img class="img-account-profile rounded-circle mb-2" src=<%= genderDetails %> alt="">

        </div>
      </div>
    <!-- </div>
    <div class="col-xl-8"> -->

      <div class="profile-card card-footer mb-4">
        <div class="profile-card-body">
          <form method="POST" action="/editProfile">

            <div class="row mb-3 gx-3">
              <label class="small mb-1" for="inputEmailAddress">Username</label>
              <input class="form-control" id="inputEmailAddress" type="email" placeholder="Enter your email address" value="<%= user.username %>" name="username">
            </div>

            <div class="row gx-3 mb-3">
              <label class="small mb-1" for="inputFullName">Full name</label>
              <input class="form-control" id="inputFullName" type="text" placeholder="Enter your full name" value="<%= user.name %>" name="name">
            </div>


            <div class="row gx-3 mb-3">

              <label class="small mb-1" for="inputPhone">Phone number</label>
              <input class="form-control" id="inputPhone" type="text" placeholder="Enter your phone number" value="<%= user.phoneNumber %>" name="phoneNumber">
            </div>

            <div class="row gx-3 mb-3">
              <label class="small mb-1" for="inputBirthday">Birthday</label>
              <input class="form-control" id="inputBirthday" type="date" placeholder="Enter your birthday" value="<%= user.birthDate %>" name="birthDate">
            </div>

            <button class="btn btn-primary" type="submit">Save changes</button>
          </form>
        </div>
      </div>
    </div>
  <!-- </div> -->
</div>

<%- include('partials/footer') %>